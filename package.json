{
  "name": "report-feedback-automation",
  "version": "0.1.0",
  "private": true,
  "description": "Notionで記録した日報を対象に、夜間バッチでAIフィードバックを自動生成するツール",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "batch:local": "tsx scripts/batch-local.ts",
    "type-check": "tsc --noEmit",
    "test": "node --import tsx --test src/**/*.test.ts",
    "format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "engines": {
    "node": "24.13.0"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.975.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "prettier": "^3.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
