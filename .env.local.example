# ======================
# Notion
# ======================
NOTION_TOKEN=your_notion_token_here                     # Notion Integration Token
NOTION_DATA_SOURCE_ID=your_notion_data_source_id_here   # 対象の日報Data Source ID
NOTION_VERSION=2025-09-03                               # Notion API Version

# ======================
# Gemini
# ======================
GEMINI_API_KEY=your_gemini_api_key_here   # Gemini API Key
GEMINI_MODEL=gemini-2.5-flash             # Gemini Model

# ======================
# Batch Control
# ======================
MAX_ITEMS_PER_RUN=5        # 1回の最大処理件数
MIN_BODY_CHARS=80          # 本文最低文字数
GEMINI_INTERVAL_MS=15000   # Gemini呼び出し間隔(ms)
PROMPT_VERSION=v1.0        # 使用するプロンプト
DEBUG=0                    # 1=デバッグログON
